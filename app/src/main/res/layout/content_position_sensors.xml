<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_position_sensors"
    tools:context=".PositionSensorsActivity">

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="POSITION SENSORS"
        android:textColor="#262626"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View style="@style/Divider"/>
    <TextView
        android:id="@+id/gameRotationVectorMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" GAME ROTATION VECTOR"
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/gameRotationVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameRotationVector2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameRotationVector3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/geomagneticRotationVectorMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEOMAGNETIC ROTATION VECTOR"
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/geomagneticRotationVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/geomagneticRotationVector2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/geomagneticRotationVector3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z * sin(θ/2) = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/magneticFieldMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAGNETIC FIELD [μT]"
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/magneticField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/magneticField2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/magneticField3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z = --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View style="@style/Divider"/>

    <TextView
        android:id="@+id/proximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROXIMITY [cm] : --- "
        android:textColor="#262626"
        android:textSize="12sp"
        android:textStyle="bold" />

    <View style="@style/Divider"/>
    <View style="@style/Divider"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical">

    <Button
        android:id="@+id/sensingOn"
        android:layout_width="115dp"
        android:textColor="@color/cardview_light_background"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="clickSen"
        android:text="Start"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </TableRow>


</LinearLayout>






